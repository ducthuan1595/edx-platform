<style>
    .login-title {
        display: none;
        text-align: center;
        color: #757575;
        font-weight: 500;
        font-size: 2rem;
    }
    .login-form {
        min-width: 21rem;
        margin-top: 7rem;
    }
    .login-providers {
        min-width: 20rem;
    }
    .button-oa2-google-oauth2 {
        transition: background-color .3s, box-shadow .3s !important;
        padding: 12px 16px 12px 50px !important;
        border: none !important;
        border-radius: 3px !important;
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 1px 1px rgba(0, 0, 0, .25) !important;
        color: #757575 !important;
        font-size: 1.6rem !important;
        font-weight: 500;
        background-image: url(data:image/svg+xml;base64,) !important;
        background-color: white !important;
        background-repeat: no-repeat !important;
        background-position: 2px 0px !important;
        min-width: 24rem;
        min-height: 2.8rem;
    }
    .button-oa2-google-oauth2:hover {
        box-shadow: 0 -1px 0 rgba(0, 0, 0, .04), 0 2px 4px rgba(0, 0, 0, .25) !important;
    }
    #showLoginForm {
        text-decoration: underline;
        color: #0075b4;
        cursor: pointer;
        text-align: center;
        margin-top: 1.2rem;
        font-size: 0.9rem;
    }
</style>

<div class="js-form-feedback" aria-live="assertive" tabindex="-1">
</div>

<% if ( false && context.createAccountOption !== false ) { %>
<div class="toggle-form">
    <span class="text"><%- gettext("First time here?") %></span>
    <a href="https://funix.edu.vn/dang-ky/?utm_source=LMS&utm_medium=sign-up-link&utm_campaign=LMS&utm_content=FooterLink" target="_blank"><%- gettext("Create an Account.") %></a>
</div>
<% } %>

<h2 class="login-title"><%- gettext("Sign In") %></h2>

<form id="login" class="login-form" tabindex="-1" method="POST">
    <% if ( context.providers.length > 0 && !context.currentProvider || context.hasSecondaryProviders ) { %>
    <div class="login-providers">
        <% if (false) { %>
        <div class="section-title lines">
            <h3>
                <span class="text"><%- gettext("or sign in with") %></span>
            </h3>
        </div>
        <% } %>
        
        <% _.each( context.providers, function( provider ) {
            if ( provider.loginUrl ) { %>
                <button type="button" class="button-<%- provider.id %> button button-custom button-primary login-provider login-<%- provider.id %>" data-provider-url="<%- provider.loginUrl %>">
                    <% if (provider.id != 'oa2-google-oauth2') { %>
                        <div class="icon <% if ( provider.iconClass ) { %>fa <%- provider.iconClass %><% } %>" aria-hidden="true">
                            <% if ( provider.iconImage ) { %>
                                <img class="icon-image" src="<%- provider.iconImage %>" alt="<%- provider.name %> icon" />
                            <% } %>
                        </div>
                    <% } %>
                    <span aria-hidden="true"><%- provider.name %></span>
                    <span class="sr"><%- _.sprintf( gettext("Sign in with %(providerName)s"), {providerName: provider.name} ) %></span>
                </button>
            <% }
        }); %>

        <% if ( context.hasSecondaryProviders ) { %>
            <button type="button" class="button-secondary-login form-toggle" data-type="institution_login">
                <%- gettext("Use my institution/campus credentials") %>
            </button>
        <% } %>
    </div>
    <% } %>

    <p id="showLoginForm">Sign in with your account and password</p>

    <div id="loginForm" style="display: none">
        <p class="sr">
            <% if ( context.providers.length > 0 && !context.currentProvider || context.hasSecondaryProviders ) { %>
                <%- gettext("Sign in here using your email address and password, or use one of the providers listed below.") %>
            <% } else { %>
                <%- gettext("Sign in here using your email address and password.") %>
            <% } %>
            <%- gettext("If you do not yet have an account, use the button below to register.") %>
        </p>
    
        <%= context.fields %>
    
        <button type="submit" class="action action-primary action-update js-login login-button"><%- gettext("Sign in") %></button>
    </div>
</form>

<script>
    const showLoginFormButton = document.getElementById('showLoginForm');
    const loginForm = document.getElementById('loginForm');
    let isLoginFormVisible = false;

    showLoginFormButton.addEventListener('click', function () {
        if (isLoginFormVisible) {
            loginForm.style.display = 'none';
        } else {
            loginForm.style.display = 'block';
        }
        isLoginFormVisible = !isLoginFormVisible;
    });
</script>